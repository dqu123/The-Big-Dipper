# Expected config file format. Unlike the RequestHandler API, this format was
# what not decided based on a vote :).
#
# Keywords:
#   . listen
#   . handler
#   . static
#   . echo
#   . helloworld
#   . error
#   . root

listen 1337;

handler static /images {
  root ./images;
}

handler static /static {
  root ./static_test;
}

